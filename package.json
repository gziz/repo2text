{
  "name": "repo2text",
  "publisher": "gziz",
  "displayName": "Repo 2 Text",
  "repository": {
    "type": "git",
    "url": "https://github.com/gziz/repo2text"
  },
  "homepage": "https://repo2text.gziz.io",
  "description": "Export your entire codebase or specific files into a single LLM-friendly text",
  "version": "0.0.1",
  "license": "MIT",
  "icon": "resources/icon_for_store.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "repo2text.openConfigPage",
        "category": "",
        "title": "Open Settings",
        "icon": "$(gear)",
        "group": "navigation"
      },
      {
        "command": "repo2text.openEditorView",
        "category": "",
        "title": "Open Files View",
        "icon": "$(pencil)",
        "group": "navigation"
      },
      {
        "command": "repo2text.refreshWorkspace",
        "category": "",
        "title": "Refresh Workspace",
        "icon": "$(refresh)",
        "group": "navigation"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "repo2text",
          "title": "repo2text",
          "icon": "resources/icon_for_activitybar.png"
        }
      ]
    },
    "views": {
      "repo2text": [
        {
          "type": "webview",
          "id": "repo2textView",
          "name": "Repo 2 Prompt"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "repo2text.refreshWorkspace",
          "group": "navigation@1",
          "when": "view == repo2textView"
        },
        {
          "command": "repo2text.openEditorView",
          "group": "navigation@2",
          "when": "view == repo2textView"
        },
        {
          "command": "repo2text.openConfigPage",
          "group": "navigation@3",
          "when": "view == repo2textView"
        }
      ]
    },
    "configuration": {
      "title": "Repo 2 Text",
      "properties": {
        "repo2text.excludeHiddenDirectories": {
          "type": "boolean",
          "default": false,
          "description": "Whether to exclude hidden directories (starting with '.*') from search results"
        },
        "repo2text.maxFileSizeKB": {
          "type": "number",
          "default": 500,
          "description": "Maximum file size (in KB) to include in prompts. Files larger than this will be excluded to avoid exceeding token limits."
        },
        "repo2text.editorTemplateString": {
          "type": "string",
          "description": "Template string for formatting prompts from the editor. Use {{fileMap}}, {{fileContents}}, and {{userText}} as variables."
        },
        "repo2text.treeViewTemplateString": {
          "type": "string",
          "description": "Template string for formatting prompts from the tree view. Use {{fileMap}} and {{fileContents}} as variables."
        },
        "repo2text.fileTemplateString": {
          "type": "string",
          "description": "Template string for formatting individual files in the prompt. Use {{filePath}} and {{fileContent}} as variables."
        },
        "repo2text.respectGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Respect .gitignore patterns when scanning workspace files"
        }
      }
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^4.9.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "dompurify": "^3.2.4",
    "fast-glob": "^3.3.3",
    "seti-file-icons": "^0.0.8"
  }
}
